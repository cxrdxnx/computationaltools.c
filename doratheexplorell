#include <stdio.h>
#include <stdlib.h>

int doralaExploradora(){
    int x = 0, y = 0;
    
    while(1){
        scanf("%i %i", &x, &y);
        
        if (x == 0 && y == 0){
            break; 
        }
        
        int diagonal = x + y - 1;
        int itistriangular = (diagonal - 1) * diagonal / 2;
        
        if(diagonal % 2 == 0){
            int stepstaken = itistriangular + x;
            printf("%i\n", stepstaken); 
        } else {
            int stepstaken = itistriangular + y;
            printf("%i\n", stepstaken);  
        }
    }
    
    return 0;  
}

int main(void){
    doralaExploradora();
    return 0;
}
